page{
  background-color: #f1f1f1;
}
.card{
  background-color: #fff;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
}
.card-title{
  font-size: 20px;
  margin-bottom: 20rpx;
  margin: 20rpx 20rpx;
}
.border-store{
  border-bottom: 1rpx solid #ddd;
}
.borderLarge-store{
  border-bottom: 10rpx solid #ddd;
}
.card-img{
  width: 100%;
  height: 400rpx;
}

.card-addr{
  font-size: 16px;
  color:#333;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #ddd;
  margin: 20rpx 0;
}

.card-read{
  font-size: 14px;
  color: #666;
  
}

