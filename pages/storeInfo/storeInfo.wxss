page{
  background-color: #f1f1f1;
}
.card{
  background-color: #fff;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
}
.card-title{
  font-size: 28px;
  display: flex;
  width: 1100rpx;
  margin: 16rpx 20rpx;
  margin-bottom: 1rpx;
}
.border-store{
  border-bottom: 1rpx solid #ddd;
  margin-bottom: 10rpx;
}
.borderLarge-store{
  border-bottom: 10rpx solid #ddd;
}
.card-img{
  width: 100%;
  height: 400rpx;
}

.card-addr{
  font-size: 16px;
  color:#333;
  padding-bottom: 8rpx;
  margin: 5rpx 0rpx;
  display: flex;
  margin-top: 24rpx;
  width: 290rpx;
}
.addr-img{
  margin-top: 24rpx;
  width: 45rpx;
  height: 45rpx;
}
.shopImg{
  width: 100%;
  height: 200rpx;
  
  padding-bottom: 3rpx;
  align-items:center;
  
}
.shopsInfo{
     position: relative;
     width: 350px;
     height: 100%;
     margin:auto;
    }
.shopTitle{
    position: absolute;
    width: 350rpx;
    bottom: 6px;
    left: 180px;
    font-size: 18px;
    color: black;
}
.ell{
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.widths{
  width: 100rpx;
}